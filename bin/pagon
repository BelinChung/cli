#!/usr/bin/env php
<?php

$command_dir = dirname(__DIR__);
$app_root = getcwd();

require $app_root . '/vendor/autoload.php';

use Pagon\Pagon;

// Create application
$app = Pagon::create(array(
    'namespaces' => array('Pagon\Cli' => $command_dir . '/src'),
    'command'    => array(
        'app_root'   => $app_root,
        'app_dir'    => $app_root . '/app',
        'public_dir' => $app_root . '/public'
    )
));

$app->autoRoute('Pagon\Cli');

$app->run();